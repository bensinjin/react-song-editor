{
  "name": "react-song-editor",
  "version": "1.0.0",
  "description": "A song editor React component.",
  "author": "Ben St John",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --dts --format cjs,esm",
    "dev": "tsup src/index.tsx --watch",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0"
  }
}

